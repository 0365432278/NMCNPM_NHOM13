<script src="/js/event.js"></script>
<script src="/js/validation.js"></script>
<script src="/js/controlChangePass.js"></script>
<script src="/js/admin/admin.js"></script>
<script src="/js/admin/addEvent.js"></script>
<script src="/js/admin/getAdminInterface.js"></script>
<script src="/js/controlUIConfirmModal.js"></script>
