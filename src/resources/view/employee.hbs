<link rel="stylesheet" href="/css/employee.css" />

<div class="container-md" style="min-width: 90%;">
  <nav
    class="navbar navbar-expand-lg bg-light alert alert-dark shadow-lg p-2 mb-2 mt-2 bg-body rounded"
  >
    <div class="container-fluid">
      <div class="navbar-brand"><div>
          <img
            class="avatar shadow-lg p-2"
            src="{{employee.image}}"
            alt="avatar"
          />
        </div></div>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div class="navbar-nav me-auto mb-2 mb-lg-0">
          <div>
            <ul>
              <li class="fw-bold">Tên: {{employee.name}}</li>
              <li>Vị trí: {{employee.position}}</li>
              <li>Địa chỉ: {{employee.address}}</li>
              <li><a href="#">Sửa đổi thông tin cá nhân</a></li>
            </ul>
          </div>
        </div>
        <div class="d-flex" role="search">
          <div>
            <ul>
              <li>
                <img
                  src="https://img.icons8.com/metro/52/null/exit.png"
                  alt="logout"
                  style=" width: 30px; margin-left: 150px; margin-bottom: 50px; cursor: pointer;"
                  data-bs-toggle="modal"
                  data-bs-target="#logoutModal"
                /></li>
              <li>
                <a id="changePass" href="#">
                  Đổi mật khẩu
                </a>
              </li>

            </ul>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <div>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button
          class="nav-link active"
          id="healing-history"
          data-bs-toggle="tab"
          data-bs-target="#healing-history-pane"
          type="button"
          role="tab"
          aria-controls="healing-history-pane"
          aria-selected="true"
        >Lịch sử chữa bệnh</button>
      </li>
      <li class="nav-item" role="presentation">
        <button
          class="nav-link"
          id="appointment-tab"
          data-bs-toggle="tab"
          data-bs-target="#appointment-tab-pane"
          type="button"
          role="tab"
          aria-controls="appointment-tab-pane"
          aria-selected="false"
        >Danh sách lịch hẹn</button>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent" style="min-height: 40rem;">
      <div
        class="tab-pane fade show active"
        id="healing-history-pane"
        role="tabpanel"
        aria-labelledby="healing-history"
        tabindex="0"
      ><div class="shadow-lg p-2 mt-3 mb-3">
          <div><img
              src="https://img.icons8.com/glyph-neue/64/null/recycle-bin.png"
              alt="bin"
              style="width: 30px; cursor: pointer;"
            /></div>
          {{{ListInvoice}}}
        </div></div>
      <div
        class="tab-pane fade"
        id="appointment-tab-pane"
        role="tabpanel"
        aria-labelledby="appointment-tab"
        tabindex="0"
      ><div class="shadow-lg p-2 mt-3 mb-3">
          <div><img
              src="https://img.icons8.com/glyph-neue/64/null/recycle-bin.png"
              alt="bin"
              style="width: 30px;"
            />
            <a href="#" id="makeAppointment">Đặt lịch khám với bác sĩ</a>
          </div>
          {{{ListAppointment}}}
        </div></div>
    </div>
  </div>
</div>

{{> logoutModal}}

<div class="alert alert-primary mb-0" role="alert" style="height: 6.5rem;">
  this is footer
</div>

<script src="/js/employee.js"></script>